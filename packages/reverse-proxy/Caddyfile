http://localhost:5001 {
    log {
        # format single_field common_log
        output file ./caddy_logs/access.log
    }

    encode gzip

    handle /api/movies* {
        reverse_proxy movies:4000
    }

    handle /api/rentals* {
        reverse_proxy rental:4001
    }

    handle /api/accounts* {
        reverse_proxy accounting:4002
    }

    handle {
        reverse_proxy frontend:80
    }
}
